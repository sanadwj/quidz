<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Movie</th>
      <th>User</th>
      <th>Stars</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.movie_id %></td>
        <td><%= review.user %></td>
        <td><%= review.stars %></td>
        <td><%= review.review %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
